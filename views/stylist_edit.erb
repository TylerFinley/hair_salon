<div class="update-stylist">
  <h1>Update Stylist: <%= @stylist.name() %> </h1>

  <form action="/stylists/<%= @stylist.id() %>" method="post" class="form-inline">
    <div class="form-group">
      <input name="_method" type="hidden" value="patch">

      <label for="stylist_name" class="sr-only"></label>
      <div class="input-group">
        <input id="stylist_name" class="form-control" name="stylist_name" type="text" placeholder="Rename...">
      </div>

      <button class="btn" type="submit">Update</button>
    </div>
  </form>

  <button class="btn"><a href="/stylists">Back</a></button>
</div>
